<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manuel.layw_app.Music"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_marginTop="@dimen/padding_music_activity"
            android:id="@+id/stop_activity"
            android:layout_gravity="center"

            android:paddingRight="@dimen/padding_button_music_activity"
            android:paddingLeft="@dimen/padding_button_music_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="stopActivity"
            />

        <ListView
            android:paddingTop="@dimen/padding_music_activity"
            android:id="@+id/music_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
